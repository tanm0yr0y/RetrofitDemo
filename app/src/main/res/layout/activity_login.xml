<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#00bfff"
    android:layout_height="match_parent">

    <TextView
        android:onClick="findAccount"
        android:clickable="true"
        android:id="@+id/forgot_account"
        android:text="Forgotten Account?"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Login"
        android:textColor="#f9f8f8"
        android:textSize="25dp"

        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/email"
        android:hint="email"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableTint="#0b92bf"
        android:layout_marginTop="10dp"
        android:background="#e1dddd"
        android:ems="15"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/password"
        android:hint="password"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableTint="#0b92bf"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:background="#e1dddd"
        android:ems="15"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="10dp"
        android:text="Don't have an Account?"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="17dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/register"
        android:text="Click to Register"
        android:layout_gravity="center"
        android:onClick="goToRegisterPage"
        android:clickable="true"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login"
        android:text="Login"
        android:background="#0b92bf"
        android:textColor="#f9f8f8"
        android:onClick="loginAction"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBarView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>